@model DeleteViewModel

@{
    ViewData["Title"] = Model.Title;
}

<h1>@Model.Title</h1>

<div>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>@Model.EntityName</h4>
        <hr />
        <dl class="row">
            @foreach (var property in Model.Properties)
            {
                <dt class="col-sm-2">
                    @property.Key
                </dt>
                <dd class="col-sm-10">
                    @property.Value
                </dd>
            }
        </dl>

        <form asp-action="@Model.DeleteAction" method="post">
            @foreach (var property in Model.Properties)
            {
                <input type="hidden" name="@property.Key" value="@property.Value" />
            }
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="@Model.ReturnAction" asp-controller="@Model.ReturnController" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
