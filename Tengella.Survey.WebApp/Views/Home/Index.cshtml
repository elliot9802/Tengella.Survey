@model IEnumerable<Tengella.Survey.Data.Models.SurveyForm>

@{
    ViewData["Title"] = "Surveys";
}

<h1>Surveys</h1>

<a href="@Url.Action("CreateSurvey", "Home")" class="btn btn-primary mb-3">Create New Survey</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Closing Date</th>
            <th>Questions</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var survey in Model)
        {
            <tr class="@(survey.ClosingDate < DateTime.Now ? "table-danger" : "")">
                <td>@survey.Name</td>
                <td>@survey.Type</td>
                <td>@survey.ClosingDate.ToShortDateString()</td>
                <td>
                    <ul>
                        @foreach (var question in survey.Questions)
                        {
                            <li>@question.Text</li>
                        }
                    </ul>
                </td>
                <td>
                    <a href="@Url.Action("CreateSurvey", "Home", new { id = survey.SurveyFormId })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("DeleteSurvey", "Home", new { id = survey.SurveyFormId })" class="btn btn-danger">Delete</a>
                    <a href="@Url.Action("CopySurvey", "Home", new { id = survey.SurveyFormId })" class="btn btn-secondary">Copy</a>
                    @if (survey.ClosingDate < DateTime.Now)
                    {
                        <span class="text-muted">Closed</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>