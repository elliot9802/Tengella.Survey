@model IEnumerable<SurveyForm>

@{
    var errorMessage = TempData["ErrorMessage"] as string;
    var successMessage = TempData["SuccessMessage"] as string;
    ViewData["Title"] = "Surveys";
}

<div class="container mt-4">
    <div class="row mb-4">
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="fas fa-exclamation-triangle"></i> @errorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @successMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>

    <div class="row">
        <div class="col-12 col-md-6 col-lg-4 mb-4 d-flex align-items-stretch">
            <div class="card survey-card w-100">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <i class="fas fa-plus-circle fa-3x mb-3"></i>
                    <h5 class="card-title">New</h5>
                </div>
                <a href="@Url.Action("CreateSurvey", "Survey")" title="Create New Survey" class="stretched-link"></a>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4 mb-4 d-flex align-items-stretch">
            <div class="card survey-card w-100">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <i class="fas fa-chart-bar fa-3x mb-3"></i>
                    <h5 class="card-title">Summary</h5>
                </div>
                <a href="@Url.Action("SurveySummary", "SurveyAnalysis")" title="Survey Summary" class="stretched-link"></a>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-4 mb-4 d-flex align-items-stretch">
            <div class="card survey-card w-100">
                <div class="card-body d-flex flex-column align-items-center justify-content-center">
                    <i class="fas fa-envelope fa-3x mb-3"></i>
                    <h5 class="card-title">Email Management</h5>
                </div>
                <a href="@Url.Action("Index", "EmailManagement")" title="Email Management" class="stretched-link"></a>
            </div>
        </div>
    </div>

    <div class="row">
        @foreach (var survey in Model)
        {
            <div class="col-12 col-md-6 col-lg-4 mb-4 d-flex align-items-stretch">
                <div class="card survey-card w-100">
                    @if (survey.ClosingDate < DateTime.Today)
                    {
                        <span class="badge bg-danger position-absolute" style="top: 10px; right: 10px;">Closed</span>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@survey.Name</h5>
                        <p class="card-text">@survey.Type</p>
                        <p class="card-text">Survey closes: @survey.ClosingDate.ToShortDateString()</p>
                        <p class="card-text">@survey.Questions.Count() @(survey.Questions.Count() == 1 ? "question" : "questions")</p>
                        <ul>
                            @foreach (var question in survey.Questions)
                            {
                                <li>
                                    @question.Text
                                    @(question.Options.Count() > 0 ? $" ({question.Options.Count()} options)" : "")
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="card-footer d-flex justify-content-around">
                        <a href="@Url.Action("CheckSurvey", "Home", new { id = survey.SurveyFormId })"
                           title="Take Survey"
                           class="btn btn-link @(survey.ClosingDate < DateTime.Today ? "text-muted" : "")">
                            <i class="fas fa-reply"></i>
                        </a>
                        <a href="@Url.Action("PreviewSurvey", "Survey", new { id = survey.SurveyFormId })" title="Preview Survey" class="btn btn-link"><i class="fas fa-eye"></i></a>
                        <a href="@Url.Action("CreateSurvey", "Survey", new { id = survey.SurveyFormId })" title="Edit Survey" class="btn btn-link"><i class="fas fa-edit"></i></a>
                        <a href="javascript:void(0);" title="Delete Survey" class="btn btn-link delete-survey" data-survey-id="@survey.SurveyFormId"><i class="fas fa-trash-alt"></i></a>
                        <a href="@Url.Action("CopySurvey", "Survey", new { id = survey.SurveyFormId })" title="Copy Survey" class="btn btn-link"><i class="fas fa-copy"></i></a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Modal for delete confirmation -->
    <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete the selected items?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteButton">Delete</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            let surveyIdToDelete = 0;

            $('.delete-survey').on('click', function () {
                surveyIdToDelete = $(this).data('survey-id');
                $('#deleteConfirmationModal').modal('show');
            });

            $('#confirmDeleteButton').on('click', function () {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("DeleteSurvey", "Survey")',
                    data: { id: surveyIdToDelete },
                    success: function () {
                        window.location.reload();
                    },
                    error: function () {
                        alert('Error deleting survey.');
                    }
                });
            });
        });
    </script>
}