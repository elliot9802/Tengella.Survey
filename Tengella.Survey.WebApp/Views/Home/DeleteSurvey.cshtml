@model Tengella.Survey.Data.Models.SurveyForm

@{
    ViewData["Title"] = "Delete Survey";
}

<h1>Delete Survey</h1>

<div class="alert alert-danger" role="alert">
    Are you sure you want to delete the survey titled "@Model.Name"?
</div>

<form asp-action="DeleteSurveyConfirmed" method="post">
    <input type="hidden" asp-for="SurveyFormId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
