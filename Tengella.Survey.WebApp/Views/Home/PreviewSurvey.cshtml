@model Tengella.Survey.Data.Models.SurveyForm

@{
    ViewData["Title"] = "Preview Survey";
}

<div id="previewSurvey">
    <h1>@ViewData["Title"]</h1>

    <div class="card mb-3 survey-info-card">
        <div class="card-body">
            <div class="form-group mb-4">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Survey Title" readonly />
            </div>
            <div class="form-group mb-4">
                <label asp-for="Type" class="form-label"></label>
                <input asp-for="Type" class="form-control" placeholder="Survey Type" readonly />
            </div>
            <div class="form-group mb-4">
                <label asp-for="ClosingDate" class="form-label"></label>
                <input asp-for="ClosingDate" class="form-control" type="date" readonly />
            </div>
        </div>
    </div>

    <div id="questions-container">
        @if (Model.Questions != null && Model.Questions.Any())
        {
            @foreach (var question in Model.Questions)
            {
                var questionIndex = Model.Questions.ToList().IndexOf(question);
                <div class="card mb-3 question-card" id="question-@(questionIndex)">
                    <div class="card-body">
                        <h6 class="card-title">@question.Text</h6>
                        <div class="question-content mt-3">
                            <div class="form-group mt-3">
                                @if (question.Type == "Radio")
                                {
                                    @foreach (var option in question.Options)
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="Questions[@questionIndex].Options" id="option-@(option.OptionId)">
                                            <label class="form-check-label" for="option-@(option.OptionId)">
                                                @option.Text
                                            </label>
                                        </div>
                                    }
                                }
                                else if (question.Type == "Open")
                                {
                                    <textarea name="Questions[@questionIndex].Response" class="form-control" placeholder="Enter your answer" maxlength="350"></textarea>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <button type="button" class="btn btn-secondary" id="editSurveyBtn">Back to Edit</button>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#editSurveyBtn').on('click', function () {
                window.location.href = '@Url.Action("CreateSurveyFromPreview", "Home")';
            });
        });
    </script>
}
